local function AcceptMonkeyQuest()
    local success, err = pcall(function()
        -- 1. æª¢æŸ¥æ˜¯å¦å·²ç¶“æœ‰ä»»å‹™ (é¿å…é‡è¤‡æ¥å–)
        local questUI = player.PlayerGui.Main:FindFirstChild("Quest")
        if questUI and not questUI.Visible then
            print("ğŸ“ æ­£åœ¨ç™¼é€é ç«¯è«‹æ±‚: JungleQuest - Monkeys")
            
            -- ä½¿ç”¨ CommF_ å”è­°
            -- åƒæ•¸ "AcceptQuest", "JungleQuest", 1 åˆ†åˆ¥ä»£è¡¨ï¼šå‹•ä½œã€ä»»å‹™çµ„ã€åºè™Ÿ(Monkey)
            ReplicatedStorage.Remotes.CommF_:InvokeServer("AcceptQuest", "JungleQuest", 1)
        end
    end)
    
    if not success then warn("âš ï¸ æ¥ä»»å‹™è«‹æ±‚å¤±æ•—: " .. tostring(err)) end
end

-- å•Ÿå‹•å¾ªç’°æª¢æŸ¥
task.spawn(function()
    while true do
        AcceptMonkeyQuest()
        task.wait(3) -- æ¯ 3 ç§’ç¢ºèªä¸€æ¬¡
    end
end)
