local ReplicatedStorage = game:GetService("ReplicatedStorage")
local HttpService = game:GetService("HttpService")

-- ã€è¨­å®šå€ã€‘
local QuestName = "JungleQuest1" -- é€™è£¡å¡«å…¥ä½ ä¹‹å‰æŠ“åˆ°çš„ä»»å‹™åç¨±
local QuestLevel = 1             -- ä»»å‹™åºè™Ÿ (é€šå¸¸æ˜¯ 1)
local WebhookURL = "https://discord.com/api/webhooks/1468528458056339529/WKTq9fLdmYaWVaM4b-yy78n9cEP5qB2NQx254k1pMLqJusi6HFefvtBL3vOaKznHoiFH"

-- åŸ·è¡Œå™¨å°ˆç”¨ Request å‡½æ•¸ (ä¿®æ­£åœ–ä¸€çš„ Http éŒ¯èª¤)
local function MacRequest(data)
    local req = (syn and syn.request) or (http and http.request) or http_request or request
    if req then
        req({
            Url = WebhookURL,
            Method = "POST",
            Headers = {["Content-Type"] = "application/json"},
            Body = HttpService:JSONEncode(data)
        })
    end
end

-- ã€æ ¸å¿ƒåŠŸèƒ½ï¼šè‡ªå‹•æ¥ä»»å‹™ã€‘
local function AcceptQuest(name, level)
    print("--- æ­£åœ¨å˜—è©¦é ç¨‹æ¥å–ä»»å‹™: " .. name .. " ---")
    
    -- Blox Fruit çš„æ¨™æº–é€šè¨Šè·¯å¾‘
    local remote = ReplicatedStorage:WaitForChild("Remotes"):WaitForChild("CommF_")
    
    -- ç›´æ¥å‘¼å«ä¼ºæœå™¨å”è­°
    local result = remote:InvokeServer("AcceptQuest", name, level)
    
    if result == 1 or result == true then
        print("âœ… ä»»å‹™æ¥å–æˆåŠŸï¼")
        MacRequest({content = "ğŸ® æˆåŠŸæ¥å–ä»»å‹™: **" .. name .. "**"})
    else
        warn("âŒ ä»»å‹™æ¥å–å¤±æ•—ï¼Œå¯èƒ½æ˜¯ç­‰ç´šä¸è¶³æˆ–å·²ç¶“æœ‰ä»»å‹™äº†")
    end
end

-- åŸ·è¡Œ
